{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2017"
    ],
    "baseUrl": "./src/"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/storybook/**/*"
  ]
}
